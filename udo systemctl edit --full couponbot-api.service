[Unit]
Description=CouponBot FastAPI (uvicorn)
After=network-online.target
Wants=network-online.target
StartLimitBurst=3
StartLimitIntervalSec=60

[Service]
User=couponbot
Group=couponbot
WorkingDirectory=/opt/couponbot
EnvironmentFile=/opt/couponbot/requirement.env
ExecStart=/opt/couponbot/.venv/bin/python -m uvicorn fileserver:app --host 127.0.0.1 --port 8000 --workers 2
Restart=always
RestartSec=5
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
